{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier", "plugin:import/errors"],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "eol-last": "error",
    "import/order": [
      "warn",
      {
        "alphabetize": {
          "caseInsensitive": true,
          "order": "asc"
        },
        "groups": ["builtin", "external", "index", "sibling", "parent", "internal"]
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 120
      }
    ],
    "no-console": "warn",
    "no-duplicate-imports": "warn",
    "no-unused-vars": "warn",
    "object-curly-spacing": ["warn", "always"],
    "indent": ["error", 2],
    "semi": "warn",
    "sort-imports": [
      "warn",
      {
        "ignoreCase": false,
        "ignoreDeclarationSort": true,
        "ignoreMemberSort": false
      }
    ]
  }
}
